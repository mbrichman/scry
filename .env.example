# Application Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production

# PostgreSQL Configuration
POSTGRES_USER=dovos
POSTGRES_PASSWORD=dovos_password
POSTGRES_DB=dovos

PGAPPNAME=dovos-api
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384

# RAG Context Configuration
RAG_WINDOW_SIZE=3                  # Default context window (messages before/after match)
RAG_MAX_WINDOW_SIZE=10             # Maximum allowed context window size
RAG_ADAPTIVE_WINDOWING=true        # Automatically adjust window to include complete userâ†”assistant turns
RAG_DEDUPLICATE_MESSAGES=true     # Merge overlapping windows from same conversation
RAG_DEFAULT_TOP_K_WINDOWS=8        # Default number of context windows to return
RAG_DEFAULT_MAX_TOKENS=0           # Token budget per window (0 = no limit)
RAG_PROXIMITY_DECAY_LAMBDA=0.3     # Lambda for proximity decay scoring (higher = faster decay)
RAG_APPLY_RECENCY_BONUS=false      # Apply small score bonus to more recent conversations
